{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run/Debug with Cygwin (CMake)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/MeshSkinner.exe",
            "args": [],
            "cwd": "${workspaceFolder}",
            // This ensures we always build before running/debugging
            "preLaunchTask": "Build (CMake)",
            "externalConsole": true,
            "stopAtEntry": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/cygwin64/bin/gdb.exe",
            "sourceFileMap": {
                "/cygdrive/c": "C:\\"
            },
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}